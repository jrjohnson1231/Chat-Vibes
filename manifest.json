{
  "manifest_version": 2,

  "name": "My Extension",
  "description": "This extension uses IBM's Watson to add smart emojis to your speech to text",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "js": [ "jquery-3.1.1.min.js",
              "rx.all.js",
              "rx.dom.js",
              "popup.js"
            ]
    }
  ],
  "web_accessible_resources": [ "popup.js" ],
  "permissions": [
    "tabs",
    "https://*/*"
  ]
}