{
  "manifest_version": 2,

  "name": "AT&T Hack2016",
  "description": "Let Watson Choose Your Slack Emojis",
  "version": "1.0",
  "background": {
    "scripts": ["popup.js"]
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "js": [ "jquery-3.1.1.min.js",
              "rx.all.js",
              "rx.dom.compat.js",
              "content_script.js"
            ]
    }
  ],
  "web_accessible_resources": [ "popup.js" ],
  "permissions": [
    "tabs",
    "https://*/*"
  ]
}